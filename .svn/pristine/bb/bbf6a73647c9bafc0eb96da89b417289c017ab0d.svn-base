<ds-type-badge *ngIf="showLabel" [object]="dso"></ds-type-badge>
<div class="row">
  <div class="col-lg-10">
    <ds-truncatable [id]="dso.id" *ngIf="object !== undefined && object !== null">
      <div class="mt-2" *ngIf="dso.firstMetadataValue('dc.title')">
        <a *ngIf="linkType != linkTypes.None" [target]="(linkType == linkTypes.ExternalLink) ? '_blank' : '_self'"
          rel="noopener noreferrer" [routerLink]="[itemPageRoute]"
          class="lead item-list-title dont-break-out">{{dsoTitle}}</a>
        <span *ngIf="linkType == linkTypes.None" class="lead item-list-title dont-break-out" [innerHTML]="dsoTitle"></span>
      </div>
      <!-- <div class="mt-2" *ngIf="dso.firstMetadataValue('dc.date.issued')">
        <a *ngIf="linkType != linkTypes.None" [target]="(linkType == linkTypes.ExternalLink) ? '_blank' : '_self'"
          rel="noopener noreferrer" [routerLink]="[itemPageRoute]"
          class="lead item-list-title dont-break-out">{{firstMetadataValue('dc.date.issued') | translate | date:
          'dd/MM/yyyy' }}</a>
        <span *ngIf="linkType == linkTypes.None" class="lead item-list-title dont-break-out"
          [innerHTML]="firstMetadataValue('dc.date.issued')"></span>
      </div> -->
    
    <div class="d-flex mb-1">
      <div>
        <ng-container *ngIf="dso.firstMetadataValue('dc.date.issued') ">
          <span class="text-uppercase text-muted"> <b>Date</b>: {{firstMetadataValue('dc.date.issued') | translate | date:
            'dd-MM-yyyy' }} </span>
        </ng-container>
      </div>
      <div>
        <ng-container *ngIf="dso.firstMetadataValue('dc.department') ">
          <span class="text-uppercase text-muted">&nbsp;|  <b>Department</b>: {{firstMetadataValue('dc.department')}}</span>
        </ng-container>
      </div>
      <div>
        <ng-container *ngIf="dso.firstMetadataValue('dc.maintainedby') ">
          <span class="text-uppercase text-muted">&nbsp;|  <b>Maintained By</b>: {{firstMetadataValue('dc.maintainedby')}}</span>
        </ng-container>
      </div>
    </div>
    <div>
      <ng-container *ngIf="dso.firstMetadataValue('dc.subject') ">
        <span class="text-uppercase text-muted"><b>Subject</b>: </span>
        <ng-container *ngFor="let subject of dso.allMetadataValues('dc.subject'); let last = last;">
          <span class="text-uppercase text-muted">{{subject}}</span>
          <span *ngIf="!last"> | </span>
        </ng-container>
      </ng-container>
    </div>
    
    </ds-truncatable>
    </div>
    <div class="col-lg-2">
      <qrcode [qrdata]="getURLfrom()" [width]="100" [errorCorrectionLevel]="'M'"></qrcode>
    </div>
    </div>




